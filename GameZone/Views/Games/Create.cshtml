@model CreateGamefromviewmodel
@{
    ViewData["Title"] = "Add Game";
}

    <h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add New Game
</h5>

<form asp-controller="Games" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoreyId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoreyId"
                asp-items="Model.Categories">
            <option value=""></option>
            </select>
                <span asp-validation-for="CategoreyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select class="form-select" asp-for="SelectedDevices"
                        asp-items="Model.Devices">
                        <option></option>
                    </select>
                <span asp-validation-for="SelectedDevices" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea class="form-control" asp-for="Description" placeholder="enter description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Cover" placeholder="cover" 
                data-rule-extension="@Filesetting.Allowedextentions.Replace(".",string.Empty)" 
                data-msg-extension="not allowed extention"
                 data-rule-filesize="@Filesetting.maxfilesizebyte"
                 data-msg-filesize="the allowed size is @Filesetting.maxfilesizeMB"
                 />   
                <small class="form-text text-muted">only .jpg .jpes .png are allowed</small>
                <span asp-validation-for="Cover" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Save</button>
        </div>
        <div class="col-md-6">
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>

    <script>
        $.validator.addMethod("filesize",function(value,element,param){

            return this.optional(element) || element.files[0]<= param;
        });
    </script>
}
