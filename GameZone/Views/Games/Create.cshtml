@model CreateGamefromviewmodel
@{
    ViewData["Title"] = "Add Game";
}

    <h5>
    <i class="bi bi-plus-circle-dotted"></i>
    Add New Game
</h5>

<form asp-controller="Games">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoreyId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoreyId"
                asp-items="Model.Categories"></select>
                <span asp-validation-for="CategoreyId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Save</button>
        </div>
        <div class="col-md-6">
        </div>
    </div>
</form>

